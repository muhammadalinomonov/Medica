<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:padding="4dp"
        android:layout_margin="4dp"
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="76dp">
            <ImageView
                android:id="@+id/img_icon"
                android:layout_margin="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_cancel"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/txt_name_notification"
                    android:gravity="bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="Appointment Cancelled!"/>
                <TextView
                    android:id="@+id/txt_date_notification"
                    android:gravity="top"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Today | 15:36"/>
            </LinearLayout>
         <Space
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_weight="1"/>
            <ImageView
                android:id="@+id/img_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_new"
                android:layout_marginEnd="8dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/txt_description_notific"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="bottom"
            android:layout_marginHorizontal="8dp"
            android:text="fdsbgfjhsdgkfgjshdfhjgsfjhfgjkhsgkfjgjgekgfksgjegfjsjgfjgugkrjcgskjgkrgjvgdhgfjgrkjhgfkjgdrjhgvkjdgk"/>
    </androidx.cardview.widget.CardView>
</FrameLayout>